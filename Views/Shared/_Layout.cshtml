<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Notas</title>

    <!-- Eliminado: <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
    <!-- Enlaces de estilo de Moonblaze -->
    <link rel="stylesheet" href="https://unpkg.com/moonblaze/dist/moonblaze.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/moonblaze/dist/moonblaze-dark.min.css" />

    <!-- Tus estilos personalizados (este es el archivo que modificamos) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Estilos de tu proyecto -->
    <link rel="stylesheet" href="~/Notas.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sistema Escolar</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Notas" asp-action="Index">Estudiantes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Notas" asp-action="Index">Materias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Notas" asp-action="Index">Notas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 Notas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Eliminado: <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
